        .item_border_white {
            box-shadow: 0px 3px 10px 0px rgba(231, 231, 231, 1);
            border: 1px solid rgba(247, 247, 247, 1);
        }
    </style>
    {{{twBlock}}}
    {{{block 'styles'}}}
    {{{block 'scripts@head'}}}
    <script type="text/javascript">
        $mixins = []
        $i18n = {}
        function toQuery(params) {
            if (!params) return ''
            var parts = []
            Object.entries(params).forEach(function ([key, val], index) {
                parts.push(key + '=' + encodeURIComponent(val))
            })
            return parts.join('&')
        }
        function toFullUrl(url, params) {
            return url + (url.indexOf('?') == -1 ? '?' : '') + toQuery(params)
        }
        function goto(url) {
            location.href = url
        }
        function setupI18n(i18n){
            $i18n = i18n
        }
        function T(item) { 
            return $i18n && $i18n[item] || item 
        }
    </script>
</head>

<body>
    <div id='app'  v-cloak>
        {{{body}}}
    </div>
    {{{block 'scripts'}}}
    <script type="text/javascript">
        new Vue({
            mixins: $mixins,
            el: '#app'
        })
    </script>
</body>

</html>