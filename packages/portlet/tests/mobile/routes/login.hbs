<div class="container mx-auto lg:max-w-xl">
    <div class=" text-center h-screen bg_color">
        <div class="absolute flex content-between flex-wrap w-full h-screen pb-12 pt-16">
            <div class="w-1/3 "></div>
            <div class="w-1/3 "> <img class="w-full items-end rounded-full" src="./img/logo.jpg" /></div>
            <div class="w-1/3 "></div>
            <div class="w-1/12 "></div>
            <div class="w-10/12">
                <div class="flex flex-col rounded-lg  w-full bg-white px-8 py-10">

                    <div class="mb-4 ">
                        <div class="flex flex-wrap ip_color rounded-lg pl-2 pr-4 py-2">
                            <div class="w-1/6 ip_color rounded-lg">
                                {{{faIcon 'fa-user' class='w-6 h-6 mt-2 ml-2 text-gray-600'}}}
                            </div>
                            <div class="w-5/6 ip_color">
                                <input :placeholder="i18n.placeholder_login"
                                    class=" ip_color appearance-none outline-none h-10" v-model="form.login" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-4 ">
                        <div class="flex flex-wrap ip_color rounded-lg pl-2 pr-4 py-2">
                            <div class="w-1/6 ip_color rounded-lg">
                                {{{faIcon 'fa-lock' class='w-6 h-6 mt-2 ml-2 text-gray-600'}}}
                            </div>
                            <div class="w-5/6 ip_color">
                                <input :placeholder="i18n.placeholder_password"
                                    class=" ip_color appearance-none outline-none h-10" v-model="form.password" />
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button @click="login"
                            class=" button_border_green  font-bold py-3 w-full rounded-full">\{{i18n.login}}</button>
                    </div>
                </div>
            </div>
            <div class="w-1/12"></div>
        </div>
        <div class="flex items-end h-screen">
            <img class="w-full items-end " src="./img/city.png" />
        </div>
    </div>
</div>

<script>
    let $i18n = {{{ json i18n }}}
    $mixins.push({
        data() {
            return {
                i18n: $i18n,
                form: {
                    login: '',
                    password: ''
                }
            }
        },
        methods: {
            login() {
                axios.post(toFullUrl('login'), {
                    login: this.form.login,
                    password: this.form.password
                }).then(function (r) {
                    goto('/')
                }).catch(function (r) {
                })
            }
        }
    })
</script>

{{#contentFor 'styles'}}
<style>
    .bg_color {
        background-color: #50C28A;
    }

    .ip_color {
        background-color: #EAECED;
    }
</style>
{{/contentFor}}